@model InvestorsCRM.Models.Master
@{
    ViewBag.Title = "GetCompanyProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="pcoded-main-container">

    <div class="pcoded-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            @*<ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/Master/index"><i class="feather icon-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="/Master/CompanyMaster">CompanyProject/ </a>Project List</li>
                            </ul>*@
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    @if (@TempData["Error"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert" style="float:right">
                            <strong> @TempData["Error"]!</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                    }
                    <div class="card-header">
                        <h6>Company Project List</h6>
                    </div>
                  
                    <div class="card-body">
                        <div class="card-block">
                            <div class="row">
                                @Html.HiddenFor(m => m.PK_CompanyID)
                                <a href="/Master/CompanyMaster?PK_CompanyID=@Model.PK_CompanyID" class="btn btn-info">
                                    <i class="fa fa-plus" aria-hidden="true"></i>Add More Project
                                </a>
                            </div>
                            <div class="row">
                                <div class="dt-responsive table-responsive">
                                    <table id="compact" class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>S.N.</th>
                                                <th>Project Name</th>
                                                <th>Action</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                        {
                                            if (Model.lstCompanyproject != null)
                                            {

                                                int i = 1;
                                                foreach (var item in Model.lstCompanyproject)
                                                {
                                            <tr>
                                                <td style="display:none">
                                                    <input type="text" name="FK_ProjectID" value="FK_ProjectID" hidden="true" />

                                                </td>
                                                <td>@i</td>
                                                <td>@item.ProjectName</td>

                                                <td>
                                                    <a href="/Master/DeleteCompanyProject?FK_ProjectID=@item.FK_ProjectID" class="btn btn-danger">
                                                        <i class="icofont icofont-ui-delete"></i>

                                                    </a>
                                                </td>
                                            </tr>
                                                    i = i + 1;
                                                }
                                            }
                                        }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

