@model InvestorsCRM.Models.Master
@{
    ViewBag.Title = "DesignationMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("DesignationMaster", "Master", FormMethod.Post, new { @id = "signupForm" }))
{
     <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    @if (@TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="float:right">
                            <strong> @TempData["Error"]!</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                    }
                    <div class="card-header">
                        <h5>Add Designation</h5>
                        <div class="card-header-right">
                            <i class="icofont icofont-rounded-down"></i>
                            <i class="icofont icofont-refresh"></i>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12">
                                     <div class="row">
                                         <div class="col-lg-4">
                                             <div class="m-b-1">
                                                 @Html.HiddenFor(m => m.FK_ProjectID)
                                                 <label for="Designation">Designation Name</label>
                                                 @Html.TextBoxFor(m => m.DesignationName, new { @class = "form-control", @placeholder = "Designation Name", @required = "required" })
                                             </div>
                                         </div>
                                             <div class="col-md-4 mb-3">
                                                 <label for="Percentage">Percentage</label>
                                                 @Html.TextBoxFor(m => m.Percentage, new { @class = "form-control", @placeholder = "Enter Percentage", @required = "required", @onkeypress = " return isNumberKey(event);" })
                                             </div>
                                         <div class="col-lg-4" style="margin-top:25px">
                                             @if (Model.PK_CompanyID != null)
                                             {
                                                 <input type="submit" value="Update " class="btn btn-success" name="btnUpdate" />
                                             }
                                             else
                                             {
                                                 <input type="submit" class="btn  btn-primary" name="btnSave" value="Save" />
                                             }
                                             <a href="/Master/DesignationMaster" class="btn btn-dark">Reset</a>
                                             <a href="/Master/DesignationList" class="btn btn-info">Back To List</a> 
                                           </div>
                                       </div>
                                  </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/zui/1.9.1/lib/chosen/chosen.min.css" rel="stylesheet" />
<style>
    .chosen-container-multi .chosen-choices {
        padding: 6px 5px !important;
        width: 100% !important;
    }
</style>
<script>
    $(".chosen-select").chosen({
        no_results_text: "Oops, nothing found!"
    })
</script>
<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
</script>