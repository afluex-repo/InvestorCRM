@model InvestorsCRM.Models.Master
@{
    ViewBag.Title = "DesignationMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("DesignationMaster", "Master", FormMethod.Post, new { @id = "signupForm" }))
{
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/Master/index"><i class="feather icon-home"></i></a></li>

                                <li class="breadcrumb-item"><a href="#">Add Designation </a></li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                     
                        @if (@TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="float:right">
                                <strong> @TempData["Error"]!</strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            </div>
                        }
                        <div class="card-header">
                            <h5>Add Designation</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom01">Designation Name</label>
                                    @Html.TextBoxFor(m=>m.DesignationName, new {@class="form-control", @placeholder="Designation Name", @required= "required"})
                                  

                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom01">Percentage</label>
                                    @Html.TextBoxFor(m => m.Percentage, new { @class = "form-control", @placeholder = "Enter Percentage", @required = "required", @onkeypress =  " return isNumberKey(event);" })


                                </div>

                                </div>
                            @if (Model.PK_CompanyID != null)
                            {
                                <input type="submit" value="Update " class="btn btn-success" name="btnUpdate" />
                             }
                            else
                            {
                                 <input type="submit" class="btn  btn-primary" name="btnSave" value="Save" />
                            }
                            <a href="/Master/DesignationMaster" class="btn btn-dark">Reset</a>
                            <a href="/Master/DesignationList" class="btn btn-info">Back To List</a>
                                
                            </div>
                      </div>
                  </div>
             </div>
      </div>
</section>
}

<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
</script>