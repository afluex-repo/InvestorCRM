@model InvestorsCRM.Models.Master
@{
    ViewBag.Title = "PLanMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("PLanMaster", "Master", FormMethod.Post, new { @id = "signupForm" }))
{
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    @if (@TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="float:right">
                            <strong> @TempData["Error"]!</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                    }
                    <div class="card-header">
                        <h5>Add PLan</h5>
                        <div class="card-header-right">
                            <i class="icofont icofont-rounded-down"></i>
                            <i class="icofont icofont-refresh"></i>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12">
                                    <div class="row ">
                                        <div class="col-lg-4">
                                            <div class="m-b-1">
                                                 <label for="validationCustom01">PLans Name</label>
                                                @Html.TextBoxFor(m => m.PlanName, new
                                           {
                                               @class = "form-control",
                                               @placeholder = "Plan Name",
                                               @required = "required"
                                           })
                                            </div>
                                        </div>
                                        <div class="col-lg-4 " style="margin-top:25px">
                                            @if (Model.PK_PlanID != null)
                                            {
                                                <input type="submit" value="Update " class="btn btn-success" name="btnUpdate" />

                                            }
                                            else
                                            {
                                                <input type="submit" class="btn  btn-primary" name="btnSave" value="Save" />
                                            }
                                            <a href="/Master/PlanMaster" class="btn btn-dark">Reset</a>
                                             <a href="/Master/PlanList" class="btn btn-info">Back To List</a>
                                          
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- Animation card end -->
            </div>
        </div>
    </div>
        
}

