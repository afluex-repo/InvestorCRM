@model InvestorsCRM.Models.Master
@{
    ViewBag.Title = "CompanyList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="pcoded-main-container">

    <div class="pcoded-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/Master/index"><i class="feather icon-home"></i></a></li>
                               <li class="breadcrumb-item"><a href="/Master/CompanyMaster">CompanyMaster/ </a>Company List</li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
         <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    @if (@TempData["Error"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert" style="float:right">
                            <strong> @TempData["Error"]!</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                    }
                    <div class="card-header">
                        <h5>Company Master List</h5>
                    </div>
                    <div class="card-body">
                        <div class="card-block">
                            <div class="dt-responsive table-responsive">
                                <table id="compact" class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>S.N.</th>
                                            <th>Company Name</th>
                                             <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstproject != null)
                                            {

                                                int i = 1;
                                                foreach (var item in Model.lstproject)
                                                {
                                                    <tr>
                                                        <td style="display:none">
                                                            <input type="text" name="PK_CompanyID" value="PK_CompanyID" hidden="true" />
                                                        </td>
                                                        <td>@i</td>
                                                        <td>@item.CompanyName</td>
                                                        
                                                        <td>
                                                            <a href="/Master/GetCompanyProject?PK_CompanyID=@item.PK_CompanyID" class="btn btn-default"><i class="fa fa-eye" style="font-size:20px"></i>
</a>
                                                             <a href="/Master/DeleteCompany?PK_CompanyID=@item.PK_CompanyID" class="btn btn-default">
                                                                <i class="bi bi-trash"></i><img src="~/assets/trash.svg" />

                                                            </a>
                                                        </td>
                                                    </tr>
                                                    i = i + 1;
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>



