@model InvestorsCRM.Models.Master
@{
    ViewBag.Title = "DesignationList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="pcoded-main-container">

    <div class="pcoded-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            @*<ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/Master/index"><i class="feather icon-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="#"> Designation List</a></li>
                            </ul>*@
                        </div>

                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    @if (@TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="float:right">
                            <strong> @TempData["Error"]!</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                    }
                    <div class="card-header">
                        <h5>Designation List</h5>
                        <a href="/Master/DesignationMaster" class="btn btn-info">Add New</a>
                    </div>
                    <div class="card-body">
                        <div class="card-block">

                            <div class="dt-responsive table-responsive">
                                <table id="compact" class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>S.N.</th>
                                            <th>Designation Name</th>
                                            <th>Percentage %</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstDesignation != null)
                                            {

                                                int i = 1;
                                                foreach (var item in Model.lstDesignation)
                                                {
                                                    <tr>
                                                        <td style="display:none">
                                                            <input type="text" name="PK_DesignationID" value="PK_DesignationID" hidden="hidden" />
                                                        </td>
                                                        <td>@i</td>
                                                        <td>@item.Designationame</td>
                                                        <td>@item.Percentage</td>
                                                        <td>
                                                            <a href="/Master/DesignationDelete?PK_DesignationID=@item.PK_DesignationID" class="btn btn-danger"><i class="icofont icofont-ui-delete"></i>
                                                     
                                                        </td>
                                                    </tr>
                                                    i = i + 1;
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
