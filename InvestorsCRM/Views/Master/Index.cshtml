
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header-breadcrumb">
    <ul class="breadcrumb-title">
        <li class="breadcrumb-item">
            <a href="/Master/index">
                <i class="ti-home"></i>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Master/Index">Dashboard</a>
        </li>
       
    </ul>
</div>
      
<div class="page-body mt-3">
    <div class="row">
        <div class="col-md-6 col-xl-4">
            <div class="card client-blocks dark-primary-border">
                <div class="card-block">
                    <h5>Total User</h5>
                    <ul>
                        <li>
                            <i class="ti-user"></i>
                        </li>
                        <li class="text-right">
                           @ViewBag.TotalUser
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="card client-blocks dark-primary-border">
                <div class="card-block">
                    <h5>Total Investor</h5>
                    <ul>
                        <li>
                            <i class="ti-user"></i>
                        </li>
                        <li class="text-right">
                            @ViewBag.TotalInvestor
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="card client-blocks dark-primary-border">
                <div class="card-block">
                    <h5>Total Invesment</h5>
                    <ul>
                        <li>
                            <i class="fa fa-rupee"></i>
                        </li>
                        <li class="text-right">
                          Rs.  @ViewBag.Totalinvesment
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- counter-card-1 start--
        <div class="col-md-12 col-xl-4">
            <div class="card counter-card-1">
                <div class="card-block-big">
                    <div>
                        <h3>@ViewBag.TotalUser</h3>
                        <p>
                            Total User
                            <span class="f-right text-primary">
                                <i class="icofont icofont-arrow-up"></i>
                             </span>
                        </p>
                        <div class="progress ">
                            <div class="progress-bar progress-bar-striped progress-xs progress-bar-pink" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <i class="icofont icofont-comment"></i>
                </div>
            </div>
        </div>
        <!-- counter-card-1 end-->
        <!-- counter-card-2 start --
        <div class="col-md-6 col-xl-4">
            <div class="card counter-card-2">
                <div class="card-block-big">
                    <div>
                        <h3>@ViewBag.TotalInvestor</h3>
                        <p>
                            TotalInvestor
                            <span class="f-right text-success">
                                <i class="icofont icofont-arrow-up"></i>
                              
                            </span>
                        </p>
                        <div class="progress ">
                            <div class="progress-bar progress-bar-striped progress-xs progress-bar-success" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <i class="icofont icofont-coffee-mug"></i>
                </div>
            </div>
        </div>
        <!-- counter-card-2 end -->
        <!-- counter-card-3 start --
        <div class="col-md-6 col-xl-4">
            <div class="card counter-card-3">
                <div class="card-block-big">
                    <div>
                        <h3>Rs.  @ViewBag.Totalinvesment </h3>
                        <p>
                            Total Invesment
                            <span class="f-right text-default">
                                <i class="icofont icofont-arrow-down"></i>
                            </span>
                        </p>
                        <div class="progress ">
                            <div class="progress-bar progress-bar-striped progress-xs progress-bar-default" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <i class="icofont icofont-upload"></i>
                </div>
            </div>
        </div>
        <!-- counter-card-3 end -->
        <!-- Monthly Growth Chart start-->
        <div class="col-xl-6">
            <div class="card">
                <div class="card-header">
                    <h5>Kohinoor Growth Chart</h5>
                </div>
                    <img src="~/assets/images/growth-1.jpg" class="img-fluid chart_img"/>
                    @*<div id="chart4"></div>*@
            </div>
        </div>
        <!-- Monthly Growth Chart end-->
        <!-- Google Chart start-->
        <div class="col-xl-6">
            <div class="card">
                <div class="card-header">
                    <h5>Growth</h5>
                </div>
                    <img src="~/assets/images/growth-2.jpg" class="img-fluid chart_img" />
                    @*<div id="chart_Donut" style="width: 100%; height: 320px;"></div>*@
             
            </div>
        </div>
     </div>
</div>
        