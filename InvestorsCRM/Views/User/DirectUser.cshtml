@model InvestorsCRM.Models.User

@{
    ViewBag.Title = "DirectUser";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@using (Html.BeginForm("DirectUser", "User", FormMethod.Post, new { @id = "signupForm", @novalidate = "" }))
{

    <div class="page-header-title">
        <h4>Direct User</h4>
    </div>
    <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
            <li class="breadcrumb-item">
                <h5></h5>
                @if (@TempData["msg"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="float:right">
                        <strong> @TempData["msg"]!</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                }
            </li>
        </ul>
    </div>
    <div class="page-body mt-4">
        <div class="row">
            <div class="col-sm-12">
                <!-- HTML5 Export Buttons table start -->
                <div class="card">
                    <div class="card-header table-card-header">
                        <div class="card-header-right">
                            <i class="icofont icofont-rounded-down"></i>
                            <i class="icofont icofont-refresh"></i>
                        </div>
                    </div>
                    <div class="card-block">
                        @*<div class="row">
                                <div class="col-md-3 mb-3">
                                    <label for="Username">Login Id</label>
                                    @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control", @placeholder = "Login ID" })
                                </div>
                                @Html.HiddenFor(m => m.LoginID)
                                <div class="col-md-3 mb-3">
                                    <label for="Username">From Date</label>
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "From Date", @readonly = "true" })
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="Username">To Date</label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "ToDate", @readonly = "true" })
                                </div>
                                <div class="col-md-3 mb-3" style="margin-top: 30px;">
                                    <input type="submit" class="btn  btn-success" name="btnSearch" value="Search" />
                                </div>

                            </div>*@
                        <div class="card-block">
                            <div class="dt-responsive table-responsive">
                                <table id="basic-btn" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>S.N.</th>
                                            <th>Investor</th>
                                            <th>Password</th>
                                            <th>Sponsor</th>
                                            <th>Mobile</th>
                                            <th>Email Id</th>
                                            <th>Pan No</th>
                                            <th>Amount</th>
                                            <th>Agreement</th>
                                            <th>Address</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstDirect != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstDirect)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.FullName</td>
                                                        <td>@item.Password</td>
                                                        <td>@item.SponsorName</td>
                                                        <td>@item.Mobile</td>
                                                        <td>@item.EmailId</td>
                                                        <td>@item.PanNo</td>
                                                        <td>@item.Amount</td>
                                                        <td>@item.Address</td>
                                                    </tr>
                                                    i = i + 1;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
